<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:bottom="2dp">
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/design_default_color_primary" />
                    <corners android:radius="32dp" />
                    <stroke android:width="1px" android:color="@android:color/black" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item android:bottom="2dp">
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/design_default_color_primary" />
                    <corners android:radius="32dp" />
                    <stroke android:width="0.5px" android:color="@android:color/black" />
                </shape>
            </item>
        </layer-list>

    </item>

    <item android:state_enabled="true">
        <layer-list>
            <item android:bottom="2dp">
                <shape>
                    <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/design_default_color_primary" />
                    <corners android:radius="32dp" />
                    <stroke android:width="0.5px" android:color="@android:color/black" />
                </shape>
            </item>
        </layer-list>

        <item android:state_pressed="true">
            <layer-list>
                <item android:bottom="2dp">
                    <shape>
                        <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/design_default_color_primary" />
                        <corners android:radius="32dp" />
                        <stroke android:width="0.5px" android:color="@android:color/black" />
                    </shape>
                </item>
            </layer-list>

        </item>

        <item android:state_pressed="false">
            <layer-list>
                <item android:bottom="2dp">
                    <shape>
                        <gradient android:angle="90" android:endColor="@color/colorAccent" android:startColor="@color/design_default_color_primary" />
                        <corners android:radius="32dp" />
                        <stroke android:width="1px" android:color="@android:color/black" />
                    </shape>
                </item>
            </layer-list>

        </item>

    </item>

</selector>